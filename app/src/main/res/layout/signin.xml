<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#805F5C5C"
    android:padding="16dp"
    tools:context=".MainActivity"
    tools:ignore="NewApi">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/bungee"
        android:text="Basic Looks"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:text="Email:"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="80dp" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEmail"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:text="Password:"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="80dp" />

    <Button
        android:id="@+id/buttonSignIn"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPassword"
        android:layout_marginTop="22dp"
        android:backgroundTint="#8C393737"
        android:padding="4dp"
        android:text="Sign In"
        app:cornerRadius="@dimen/cardview_compat_inset_shadow" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSignIn"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonForgotPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="#00988F8F"
            android:text="@string/fpbtn"
            android:textColor="#FFFFFF"
            app:cornerRadius="@dimen/material_emphasis_high_type" />

        <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:text="@string/signinbtn"
            android:textColor="#FFFFFF"
            app:cornerRadius="@dimen/material_emphasis_high_type" />
    </LinearLayout>

</RelativeLayout>