<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity7_productpage">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="match_parent"
                android:layout_height="601dp"
                app:srcCompat="@drawable/sweaterpic" />

            <EditText
                android:id="@+id/editTextText17"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="text"
                android:text="Olive Sweater size Large"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="392dp"
                android:layout_height="29dp"
                android:text="450 EGP"
                android:textSize="24sp" />

            <Button
                android:id="@+id/addToCartBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:text="Add To Cart "
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="18dp"
                android:textStyle="normal"
                android:onClick="openShopping"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="BASIC LOOK"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView40"
                android:layout_width="57dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/textView"
                android:onClick="openShopping"
                android:padding="2dp"
                android:tooltipText="cart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.228"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.036"
                app:srcCompat="@drawable/bbag"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="57dp"
                android:layout_height="50dp"
                android:layout_toLeftOf="@+id/textView"
                android:onClick="openWishList"
                android:tooltipText="wishlist"
                android:padding="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.228"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.036"
                app:srcCompat="@drawable/wishlist"
                tools:ignore="SpeakableTextPresentCheck" />

        </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>