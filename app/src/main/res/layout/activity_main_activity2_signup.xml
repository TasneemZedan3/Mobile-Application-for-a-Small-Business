<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#805F5C5C"
    tools:context=".MainActivity2_signup">


    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/bungee"
            android:text="Basic Looks"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="48sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_width="340dp"
            android:layout_height="62dp"
            android:layout_below="@id/textViewTitle"
            android:layout_centerInParent="true"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:text="First Name:"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="80dp" />

        <EditText
            android:id="@+id/surname"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_centerInParent="true"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:text="Last Name:"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="80dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/surname"
            android:layout_centerInParent="true"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:text="Email:"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="80dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_centerInParent="true"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:text="Password:"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="80dp" />

        <EditText
            android:id="@+id/repeatpass"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:layout_centerInParent="true"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:text="Repeate Password:"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="80dp" />

        <Button
            android:id="@+id/btnSignUp2"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/repeatpass"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:backgroundTint="#8C393737"
            android:onClick="openSignIn"
            android:padding="4dp"
            android:text="SIGN UP" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>